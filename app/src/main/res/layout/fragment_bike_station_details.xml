<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="feature"
            type="digikraft.project.digikraftbikestation.data.Feature" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragment.bikestationdetails.BikeStationDetailsFragment">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ui.fragment.bikestationdetails" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_card_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txt_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_10"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:text="@{String.valueOf(feature.count)+`  `+feature.properties.label}"
                android:textAppearance="@style/type_heading_medium_black_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Most Teatralny" />

            <!--  android:text="@{`Rs.`+String.valueOf(order.total)}"-->
            <TextView
                android:id="@+id/txt_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="300m"
                android:textAppearance="@style/type_subtext_grey_12"
                app:layout_constraintStart_toStartOf="@+id/txt_station"
                app:layout_constraintTop_toBottomOf="@+id/txt_station" />


            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_5"
                android:text="@{`. `+feature.type}"
                android:textAppearance="@style/type_subtext_light_grey_12"
                app:layout_constraintBottom_toBottomOf="@+id/txt_distance"
                app:layout_constraintStart_toEndOf="@+id/txt_distance"
                app:layout_constraintTop_toTopOf="@+id/txt_distance"
                tools:text=". Bike Station" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/img_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_20"
                android:src="@drawable/ic_bike"
                app:layout_constraintEnd_toStartOf="@+id/guideline_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_type" />

            <TextView
                android:id="@+id/txt_available_bikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="@string/available_bikes"
                android:textAppearance="@style/type_subtext_light_grey_12"
                app:layout_constraintEnd_toEndOf="@+id/img_bike"
                app:layout_constraintStart_toStartOf="@+id/img_bike"
                app:layout_constraintTop_toBottomOf="@+id/img_bike" />

            <TextView
                android:id="@+id/txt_available_bikes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="@{feature.properties.bikes}"
                android:textAppearance="@style/type_heading_medium_green_30"
                app:layout_constraintEnd_toEndOf="@+id/img_bike"
                app:layout_constraintStart_toStartOf="@+id/img_bike"
                app:layout_constraintTop_toBottomOf="@+id/txt_available_bikes"
                tools:text="7" />


            <ImageView
                android:id="@+id/img_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_center"
                app:layout_constraintTop_toTopOf="@+id/img_bike" />

            <TextView
                android:id="@+id/txt_available_places"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="@string/available_places"
                android:textAppearance="@style/type_subtext_light_grey_12"
                app:layout_constraintEnd_toEndOf="@+id/img_lock"
                app:layout_constraintStart_toStartOf="@+id/img_lock"
                app:layout_constraintTop_toBottomOf="@+id/img_lock" />


            <TextView
                android:id="@+id/txt_available_places_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_5"
                android:text="@{feature.properties.free_racks}"
                android:textAppearance="@style/type_heading_medium_black_30"
                app:layout_constraintEnd_toEndOf="@+id/img_lock"
                app:layout_constraintStart_toStartOf="@+id/img_lock"
                app:layout_constraintTop_toBottomOf="@+id/txt_available_places"
                tools:text="7" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>