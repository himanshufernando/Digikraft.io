<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="feature"
            type="digikraft.project.digikraftbikestation.data.Feature" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_card_height">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin_10"
            card_view:cardBackgroundColor="@color/white"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{clickListener}"
            card_view:cardCornerRadius="@dimen/card_corner_radius">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_card_height">

                <TextView
                    android:id="@+id/txt_station"
                    android:textAppearance="@style/type_heading_medium_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Most Teatralny"
                    android:text="@{String.valueOf(feature.count)+`  `+feature.properties.label}"
                    android:layout_marginStart="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <!--  android:text="@{`Rs.`+String.valueOf(order.total)}"-->
                <TextView
                    android:id="@+id/txt_distance"
                    android:textAppearance="@style/type_subtext_grey_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    card_view:layout_constraintStart_toStartOf="@+id/txt_station"
                    card_view:layout_constraintTop_toBottomOf="@+id/txt_station"
                    android:text="300m" />


                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`. `+feature.type}"
                    android:textAppearance="@style/type_subtext_light_grey_12"
                    android:layout_marginStart="@dimen/layout_margin_5"
                    card_view:layout_constraintBottom_toBottomOf="@+id/txt_distance"
                    card_view:layout_constraintStart_toEndOf="@+id/txt_distance"
                    card_view:layout_constraintTop_toTopOf="@+id/txt_distance"
                    tools:text=". Bike Station" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <ImageView
                    android:id="@+id/img_bike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bike"
                    android:layout_marginTop="@dimen/layout_margin_20"
                    card_view:layout_constraintEnd_toStartOf="@+id/guideline_center"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/txt_type" />

                <TextView
                    android:id="@+id/txt_available_bikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_bikes"
                    android:textAppearance="@style/type_subtext_light_grey_12"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    card_view:layout_constraintEnd_toEndOf="@+id/img_bike"
                    card_view:layout_constraintStart_toStartOf="@+id/img_bike"
                    card_view:layout_constraintTop_toBottomOf="@+id/img_bike"
                    />

                <TextView
                    android:id="@+id/txt_available_bikes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{feature.properties.bikes}"
                    android:textAppearance="@style/type_heading_medium_green_30"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    card_view:layout_constraintEnd_toEndOf="@+id/img_bike"
                    card_view:layout_constraintStart_toStartOf="@+id/img_bike"
                    card_view:layout_constraintTop_toBottomOf="@+id/txt_available_bikes"
                    tools:text="7" />


                <ImageView
                    android:id="@+id/img_lock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/guideline_center"
                    card_view:layout_constraintTop_toTopOf="@+id/img_bike" />

                <TextView
                    android:id="@+id/txt_available_places"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available_places"
                    android:textAppearance="@style/type_subtext_light_grey_12"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    card_view:layout_constraintEnd_toEndOf="@+id/img_lock"
                    card_view:layout_constraintStart_toStartOf="@+id/img_lock"
                    card_view:layout_constraintTop_toBottomOf="@+id/img_lock" />


                <TextView
                    android:id="@+id/txt_available_places_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{feature.properties.free_racks}"
                    android:textAppearance="@style/type_heading_medium_black_30"
                    android:layout_marginTop="@dimen/layout_margin_5"
                    card_view:layout_constraintEnd_toEndOf="@+id/img_lock"
                    card_view:layout_constraintStart_toStartOf="@+id/img_lock"
                    card_view:layout_constraintTop_toBottomOf="@+id/txt_available_places"
                    tools:text="7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>